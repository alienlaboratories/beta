    function installCrx() {
      // NOTE: Only works from https (prod).
      // https://developer.chrome.com/webstore/inline_installation
      chrome.webstore.install('{{ crxUrl }}', () => { console.log('OK') }, error => { console.error(error) });
      return false;
    }

