{{#section 'head'}}
  {{! Chrome Extension. }}
  <link rel="chrome-webstore-item" href="{{ crxUrl }}">
{{/section}}

{{#section 'header'}}
  <div class="site-user">
    <h1>Profile</h1>
  </div>

  <div class="site-toolbar">
    {{> user/menu }}
  </div>
{{/section}}

{{#section 'body'}}
  <div class="site-panel">
    <h2>User</h2>
    <pre class="site-json">{{{ json user 2 }}}</pre>
  </div>

  <!--
  <div class="site-panel">
    <pre class="site-json" id="token"></pre>
  </div>
  -->

  <div class="site-panel">
    <h2>Groups</h2>
    {{#each groups}}
    <pre class="site-json">{{{ json . 2 }}}</pre>
    {{/each}}
  </div>
{{/section}}

{{#section 'script'}}
  <script>
